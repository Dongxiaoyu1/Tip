<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list >
            <item>
                <shape
                    android:shape="oval"
                    android:useLevel="true">
                    <size
                        android:height="60dp"
                        android:width="60dp">

                    </size>
                    <solid android:color="@android:color/transparent">

                    </solid>
                    <stroke android:width="3dp"
                        android:color="@color/colorPrimary">

                    </stroke>
                </shape>
            </item>
            <item
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp">
                <shape
                    android:shape="oval"
                    android:useLevel="true">
                    <size
                        android:width="60dp"
                        android:height="60dp" />
                    <solid android:color="@color/colorPrimary" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list >
            <item>
                <shape
                    android:shape="oval"
                    android:useLevel="true">
                    <size
                        android:height="60dp"
                        android:width="60dp">

                    </size>
                    <solid android:color="@android:color/transparent">

                    </solid>
                    <stroke android:width="3dp"
                        android:color="@color/green">

                    </stroke>
                </shape>
            </item>
            <item
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp">
                <shape
                    android:shape="oval"
                    android:useLevel="true">
                    <size
                        android:width="60dp"
                        android:height="60dp" />
                    <solid android:color="@color/green" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>
