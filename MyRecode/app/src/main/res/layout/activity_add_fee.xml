<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddFeeActivity">
    <TextView
        android:id="@+id/add_fee_top_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="添加缴费记录"
        android:layout_marginTop="60dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </TextView>
    <TextView
        android:id="@+id/add_fee_cursor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="课程名:"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/add_fee_top_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.2">
    </TextView>
    <TextView
        android:id="@+id/add_fee_cursor_name_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:clickable="true"
        app:layout_constraintLeft_toRightOf="@id/add_fee_cursor_name"
        app:layout_constraintTop_toBottomOf="@id/add_fee_top_title"
        app:layout_constraintBaseline_toBaselineOf="@id/add_fee_cursor_name">

    </TextView>

    <TextView
        android:id="@+id/add_fee_fee_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="费     用:"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/add_fee_cursor_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.2">
    </TextView>
    <EditText
        android:id="@+id/add_fee_fee_name_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:ems="10"
        app:layout_constraintLeft_toRightOf="@id/add_fee_fee_name"
        app:layout_constraintTop_toBottomOf="@id/add_fee_cursor_name"
        app:layout_constraintBaseline_toBaselineOf="@id/add_fee_fee_name">

    </EditText>

    <TextView
        android:id="@+id/add_fee_count_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="次      数:"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/add_fee_fee_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.2">
    </TextView>
    <EditText
        android:id="@+id/add_fee_count_name_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:ems="10"
        app:layout_constraintLeft_toRightOf="@id/add_fee_count_name"
        app:layout_constraintTop_toBottomOf="@id/add_fee_fee_name"
        app:layout_constraintBaseline_toBaselineOf="@id/add_fee_count_name">

    </EditText>


    <TextView
        android:id="@+id/add_fee_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="日     期:"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/add_fee_count_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        >
    </TextView>
    <TextView
        android:id="@+id/add_fee_date_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="日   期"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@id/add_fee_date"
        app:layout_constraintTop_toBottomOf="@id/add_fee_count_name"
        app:layout_constraintBaseline_toBaselineOf="@id/add_fee_date">
    </TextView>

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="取消"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/button_ok"
        app:layout_constraintTop_toBottomOf="@id/add_fee_date">
    </Button>
    <Button
        android:id="@+id/button_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="确定"
        app:layout_constraintLeft_toRightOf="@id/button_cancel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_fee_date">
    </Button>


</androidx.constraintlayout.widget.ConstraintLayout>